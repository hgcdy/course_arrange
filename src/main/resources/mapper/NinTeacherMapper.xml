<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.netinnet.coursearrange.mapper.NinTeacherMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.netinnet.coursearrange.entity.NinTeacher">
        <id column="id" property="id" />
        <result column="teacher_name" property="teacherName" />
        <result column="teacher_code" property="teacherCode" />
        <result column="teacher_password" property="teacherPassword" />
        <result column="del_flag" property="delFlag" />
        <result column="create_time" property="createTime" />
        <result column="create_user_id" property="createUserId" />
        <result column="modify_time" property="modifyTime" />
        <result column="modify_user_id" property="modifyUserId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, teacher_name, teacher_code, teacher_password, del_flag, create_time, create_user_id, modify_time, modify_user_id
    </sql>

<!--  条件选择查询 -->
    <select id="getSelectList" resultType="cn.netinnet.coursearrange.entity.NinTeacher">
        SELECT id, teacher_name, teacher_code, teacher_password
        FROM nin_teacher
        WHERE del_flag = 0
        <if test="teacherName != null and teacherName != ''">
            AND (teacher_name LIKE CONCAT('%',#{teacherName},'%') OR teacher_code LIKE CONCAT('%',#{teacherName},'%'))
        </if>
        ORDER BY teacher_name
    </select>

    <!--根据课程查询教师-->
    <select id="getSelectByCourse" resultType="cn.netinnet.coursearrange.entity.NinTeacher">
        SELECT nin_teacher.*
        FROM nin_teacher INNER JOIN nin_teacher_course ON nin_teacher.id = nin_teacher_course.teacher_id
        WHERE nin_teacher_course.course_id = #{courseId}
    </select>

</mapper>
