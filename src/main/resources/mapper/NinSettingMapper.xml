<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.netinnet.coursearrange.mapper.NinSettingMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.netinnet.coursearrange.entity.NinSetting">
        <id column="id" property="id" />
        <result column="course_id" property="courseId" />
        <result column="user_type" property="userType" />
        <result column="open_state" property="openState" />
        <result column="open_time" property="openTime" />
        <result column="close_time" property="closeTime" />
        <result column="del_flag" property="delFlag" />
        <result column="create_time" property="createTime" />
        <result column="create_user_id" property="createUserId" />
        <result column="modify_time" property="modifyTime" />
        <result column="modify_user_id" property="modifyUserId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_id, user_type, open_state, open_time, close_time, del_flag, create_time, create_user_id, modify_time, modify_user_id
    </sql>

    <update id="alterBatch">
        UPDATE nin_setting
        <trim prefix="set" suffixOverrides=",">
            <if test="openState != null">
                open_state = #{openState},
            </if>
            <if test="openTime != null">
                open_time = #{openTime},
            </if>
            <if test="closeTime != null">
                close_time = #{closeTime},
            </if>
        </trim>
        WHERE id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")" >
            #{item}
        </foreach>

    </update>


    <select id="getSelectList" resultType="java.util.Map">
        SELECT nin_setting.id AS id, course_id AS courseId, course_name AS courseName, open_state AS openState, open_time AS openTime, close_time AS closeTime
        FROM nin_setting INNER JOIN nin_course ON nin_setting.course_id = nin_course.id
        WHERE nin_arrange.user_type = #{userType}
        <if test="courseName != null and courseName != ''">
            AND nin_course.course_name LIKE ('%', #{courseName}, '%')
        </if>
        <if test="openState != null">
            AND nin_setting.open_otate = #{openState}
        </if>
    </select>

</mapper>
